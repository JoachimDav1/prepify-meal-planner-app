<div class="header-pages-home">
  <%= image_tag "prepify-bowl.svg", alt: "Prepify Logo", class: "header-logo" %>
  <h3 class="header-title"><b>Prepify</b></h3>
</div>

<div class="container justify-content-center mt-3">
  <div class="row">
    <div class="col-12 col-lg-6">
      <h2 class="mt-3 mb-3 text-center"><b>Login</b></h2>
       <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn orange-btn mb-3" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

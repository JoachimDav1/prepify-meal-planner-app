<div class="parent-container mt-3">
  <div class="row justify-content-center">

    <div class="col-12 col-lg-4">
      <div class="row">
        <div class="col-2">
          <% if user_signed_in? %>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag current_user.photo.key, class: "avatar" %>
            <% else %>
              <i class="fa-solid fa-bowl-food justify-content-center"></i>
            <% end %>
          <% else %>
            <i class="fa-solid fa-bowl-food justify-content-center"></i>
          <% end %>
        </div>
        <div class="col-10">
          <% if user_signed_in? %>
            <h4>Hello, <b><%= current_user.username %></b>!</h4>
          <% else %>
            <h4>Hello, you!</h4>
          <% end %>
          <p>What are you cooking this week?</p>
        </div>
      </div>
    </div>

    <%= render "shared/search" %>

    <div class="bigcard col-12 col-lg-8 mb-3">
      <%= link_to 'Today', planned_meals_path, class: 'subparagraph' %>

      <div class="homecard add-recipe-card">
      <% if signed_in? %>
        <%current_user.planned_meals.find_by(date: Date.today) %>

          <% recipe = current_user.planned_meals.any? ? current_user.planned_meals.first.recipe : Recipe.last %>
          <img src="<%= recipe.image %>" class="card-image" alt="<%= recipe.title %>">

          <div class="homecard-content">
            <h6 class= "font-weight-bold"><b><%= link_to recipe.title, recipe_path(recipe), class: "card-title" %></b></h6>
            <p class="card-text font-weight-light"><%= recipe.category.split(', ')[0].capitalize %></p>
          </div>

        <% else %>
          <%= link_to recipes_path do %>
            <div>
              <i class="fa-solid fa-plus icon-orange" style="font-size: 36px;"></i>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>




    <div class="col-12 col-lg-6 justify-content-center d-flex flex-column">
      <div class="d-flex justify-content-between align-items-center">
        <h4 class="mt-3"><b>Search by category</b></h4>
        <%= link_to 'See all', recipes_path, class: 'btn btn-link text-dark text-decoration-none ml-auto' %>
      </div>
      <div class="mt-3 category-scroll">
        <% @categories.each do |category|  %>
          <div class="category-button"><%= link_to "#{category}", root_path(categ: "#{category}"), class: params[:categ] == category ? "card-category card-category-active" : "card-category" %></div>
        <% end %>
      </div>
    </div>

  </div>
</div>



    <div class="col-12 col-lg-6 justify-content-center">
      <div class="row">
        <div class="col-12">
          <div class="recipe-cards">
            <% @recipes.each do |recipe| %>
              <div class="card-scroll">
                <img src="<%= recipe.image %>" class="card-image-scroll" alt="<%= recipe.title %>">
                <div class="card-content">
                  <%= link_to recipe.title, recipe_path(recipe), class: "card-title" %>
                  <p class="card-text"><%= recipe.category.split(', ')[0].capitalize %></p>
                </div>

                <i id="plus-button" data-bs-toggle="modal" data-bs-target="#staticBackdrop<%=recipe.id%>"><%= image_tag 'plus.svg', class: "add-button" %></i>

                <div class="modal fade" id="staticBackdrop<%=recipe.id%>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Where do you want to add this recipe?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="button-container">

                        <% if current_user.favorites.exists?(recipe_id: recipe.id) %>
                          <button type="button" class="btn btn-outline-success d-flex justify-content-center mx-auto mt-3 p-1" disabled> Already saved in my Favorites !</button>
                        <% else %>
                          <%= form_with url: recipe_favorites_path(recipe_id: recipe.id), method: :post, class: "d-inline" do %>
                          <button type="submit" class="btn btn-outline-primary d-flex justify-content-center mx-auto mt-3 p-1">
                            My Favorites <i class="fa-solid fa-heart p-1"></i>
                          </button>
                            <% end %>
                        <% end %>

                        <hr>

                        <%= simple_form_for [recipe, @planned_meal] do |f| %>
                          <div class="row">
                            <div class="col-md-6">
                              <%= f.input :date, as: :string, input_html: { id: "date", data: { controller: "datepicker" }, class: "form-control", placeholder: "Select a day" }, label: false %>
                            </div>
                            <div class="col-md-6">
                              <%= f.button :submit, "Add to my Calendar", class: "btn btn-outline-primary d-flex justify-content-center mx-auto mt-3 p-1" %>
                            </div>
                          </div>
                        <% end %>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>








              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

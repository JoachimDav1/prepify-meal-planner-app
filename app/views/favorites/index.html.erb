
<div class ="favorite-container">

  <H2><b>Favorite recipes</b></H2>

 <%= render "shared/search" %>

  <div class="favorite-grid pt-4">

    <% @favorites.each do |favorite| %>

      <div class="showcard">
        <img src="<%= favorite.recipe.image %>" class="card-image" alt="<%= favorite.recipe.title %>">
        <div class="card-content">
          <h6><%= link_to favorite.recipe.title, recipe_path(favorite.recipe), class: "card-title" %></h6>
          <p class="card-text"><%= favorite.recipe.category.split(', ')[0] %></p>
        </div>
        <%= image_tag 'plus.svg', class: "add-button" %>
      </div>
    <% end %>

  </div>

</div>
